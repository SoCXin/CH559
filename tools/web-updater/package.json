  },
  "devDependencies": {
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "parcel": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.5.1",
    "prettier": "^2.2.1",
    "typescript": "^4.1.5"
  },
  "staticFiles": {
    "staticPath": "static",
    "watcherGlob": "**"
  }
}
